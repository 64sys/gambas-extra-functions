  Dim intWidt As Integer
  Dim stxParam As New String[][]
  Dim stxTmp As New String[]
  Dim intM As Integer

  intState = 0

  scwConfig.Children.Clear

  stxParam.Add(["0", ("Motor de bases de datos"), "cmo", "postgresql:mysql:sqlite3:odbc", GEFStarter.stxProgVal[0]])
